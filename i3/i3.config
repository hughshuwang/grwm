# control+Shift family
# occupied: tab space q r t g n s f d j b v
# vacant: w e y u i o p a h k l ;

# occupied in chrome
# control+Shift+d: dark mode
# control+Shift+j: input
# control+Shift+f: full screen

# focus move
bindsym control+Tab focus left
bindsym Shift+Tab focus down

# split and new launch
bindsym control+Shift+b split h
bindsym control+Shift+v split v
bindsym control+Shift+t exec xfce4-terminal
bindsym control+Shift+g exec chromium
bindsym control+Shift+n exec nautilus

bindsym control+Shift+f fullscreen toggle
bindsym control+Shift+z move left
bindsym control+Shift+x move down
bindsym control+Shift+space floating toggle

bindsym control+Shift+s restart
bindsym control+Shift+q exec i3-msg exit
bindsym control+Shift+r mode "resize"

bindsym control+Shift+h layout tabbed
bindsym control+Shift+l layout toggle split

# bindsym control+Shift+0 exec scrot '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f~/Downloads/'
bindsym control+Shift+0 exec scrot ~/Downloads/Screenshots_%b%d%H%M%S.jpg # default naming

bindsym control+$mod+Shift+l exec i3lock --color=282828
bindsym control+$mod+Shift+q exec systemctl poweroff
bindsym control+$mod+Shift+r exec systemctl reboot

# start dmenu (a program launcher)
bindsym control+space exec rofi -show run \
    -theme gruvbox-dark -lines 10 -width 15

# similar to hide and show (UP!)
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# control family for window manipulation
bindsym control+q kill 
bindsym control+Shift+1 move container to workspace number $ws1
bindsym control+Shift+2 move container to workspace number $ws2
bindsym control+Shift+3 move container to workspace number $ws3
bindsym control+Shift+4 move container to workspace number $ws4
bindsym control+Shift+9 move container to workspace number $ws9

